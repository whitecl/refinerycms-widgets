<% content_for :body_content_title do %>
  <%= @widget.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @widget.name %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @widget.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="widgets">
      <% @widgets.each do |widget| %>
        <li>
          <%= link_to widget.name, refinery.widgets_widget_path(widget) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
